<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="header col-6 offset-3">Login</h1>
    <div class="center col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 mt-4">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control signup" required>
            </div>
            <div class="mb-3 mt-4">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control signup" required>
            </div>
            <button class="btn btn-dark add-btn mt-3">Login</button>
        </form>

    </div>
</div>    